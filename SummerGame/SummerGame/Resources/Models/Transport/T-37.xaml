                            </GeometryModel3D>
                        </Model3DGroup>

                        <Model3DGroup>
                            <Model3DGroup.Transform>
                                <Transform3DGroup>
                                    <ScaleTransform3D ScaleZ="0.1" ScaleY="0.14" ScaleX="0.14"/>
