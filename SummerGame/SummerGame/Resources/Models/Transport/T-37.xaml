                                        <RotateTransform3D>
                                            <RotateTransform3D.Rotation>
                                                <AxisAngleRotation3D Axis="1,0,0" Angle="180"/>
                                            </RotateTransform3D.Rotation>
                                        </RotateTransform3D>
                                        <TranslateTransform3D OffsetZ="0.3" OffsetX="1.9" OffsetY="0"/>
                                    </Transform3DGroup>
                                </Model3D.Transform>

                            </Model3DGroup>
