<Page x:Class="ProtoMap5.DrawingPage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	  xmlns:test="clr-namespace:MyTestEnvironment;assembly=MyTestEnvironment"
	  xmlns:drawer="clr-namespace:Drawer;assembly=Drawer"
	  mc:Ignorable="d" 
	  d:DesignHeight="300" d:DesignWidth="300"
	Title="DrawingPage">

	<Grid>
		<drawer:Drawer Name="TheDrawer" Port="{Binding CurrentInput}" RenderTransformOrigin="0.5,0.5" ClipToBounds="True"></drawer:Drawer>
	</Grid>
</Page>
